    <form>
        <label for="hasło">Hasło</label>
        <input type="password" name="hasło" id="hasło" placeholder="Wpisz hasło" minlength="1" maxlength="9999" pattern="^ABC$">
        <input type="submit" value="G">
        <input type="button" value="wawawa" onclick="sprawdź()">
    </form>
    <script>
        function sprawdź() {
            let we = document.getElementById("hasło").value
            const regex = /^[0-9]{3}-[0-9]{2}$/
            if(regex.test(we)){
                alert("sigma")
            } else {
                alert("nie sigma")
            }
        }
    </script>
